<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><slot name="title" /></title>
    <!-- Other head elements -->
  </head>
  <body>
    <!-- Your site's header -->
    <header>
      <h1>Your Site Header</h1>
    </header>

    <!-- Main content -->
    <main>
      <slot />
    </main>

    <!-- Your site's footer -->
    <footer>
      <p>Your Site Footer</p>
    </footer>

    <!-- Tracking script -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Select all links with the class 'nutshell-expandable-text'
        const nutshellLinks = document.querySelectorAll('a.nutshell-expandable-text');

        // Add click event listener to each link
        nutshellLinks.forEach(link => {
          link.addEventListener('click', function(event) {
            // Send custom event to Umami
            umami.trackEvent('Nutshell Link Click', 'Nutshell Links', {
              url: link.href,
              text: link.textContent
            });
          });
        });
      });
    </script>
  </body>
</html>
