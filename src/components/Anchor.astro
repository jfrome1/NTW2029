---
// src/components/Anchor.astro

const { text = '' } = Astro.props;

const match = text.trim().match(/^(#{1,6})\s+(.+)$/);
if (!match) {
  console.warn(`Invalid heading format: "${text}" â€” expected something like "## Title"`);
}

const level = match ? match[1].length : 2; 
const title = match ? match[2].trim() : text.trim();

const id = title
  .toLowerCase()
  .replace(/\s+/g, '-')           
  .replace(/[^a-z0-9-]/g, '');   
---

<Fragment set:html={`<h${level} id="${id}" class="heading">
  ${title}
  <a href="#${id}" class="anchor-link" aria-label="Anchor for: ${title}">#</a>
</h${level}>`} />

<style>
  .heading {
    scroll-margin-top: 100px;
    position: relative;
    margin: 1.8em 0 0.6em;
    font-weight: 600;
    line-height: 1.2;
  }

  .anchor-link {
    opacity: 0;
    color: #888;
    text-decoration: none;
    margin-right: 0.4em;
    font-size: 0.8em;
    vertical-align: middle;
    transition: opacity 0.2s ease;
  }

  .heading:hover .anchor-link,
  .heading:target .anchor-link {
    opacity: 1;
  }

  .heading:target {
    background-color: #f0f8ff;
    border-left: 4px solid #007acc;
    padding-left: 8px;
  }
</style>